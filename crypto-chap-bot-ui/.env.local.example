# Meta WhatsApp Business API Configuration
META_WHATSAPP_TOKEN=EAAG... # Your WhatsApp Business API token
META_VERIFY_TOKEN=your_webhook_verify_token # Custom verification token for webhooks
META_PHONE_NUMBER_ID=1xxxxxxxxxxxxxxx # Your WhatsApp Business phone number ID
META_APP_ID=xxxxxxxxxxxxxxx # Your Meta App ID
META_APP_SECRET=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx # Optional: App Secret (Settings > Basic > Show)

# Blockchain Configuration
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/your-key # Base network RPC URL
BASE_CHAIN_ID=8453 # Base mainnet chain ID
USDC_CONTRACT=0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913 # USDC contract on Base

# Wallet Configuration
OPERATOR_PRIVATE_KEY=0x... # Bot operator private key for transactions
# Alternative: use mnemonic instead
OPERATOR_MNEMONIC="seed phrase words ..." # Bot operator mnemonic

# Onramp Providers (choose one or more)
ONRAMP_PROVIDER=coinbase # coinbase | moonpay | transak | stripe
COINBASE_ONRAMP_APP_ID=your_app_id # Coinbase onramp app ID
MOONPAY_API_KEY=pk_test_... # MoonPay API key
TRANSAK_API_KEY=pk_test_... # Transak API key
STRIPE_SECRET_KEY=sk_test_... # Stripe secret key for crypto onramp

# Database (Optional - for user data persistence)
DATABASE_URL=postgresql://... # PostgreSQL connection string
REDIS_URL=redis://... # Redis for session management

# Security
JWT_SECRET=your-super-secret-jwt-key # For API authentication
ENCRYPTION_KEY=32-character-encryption-key # For sensitive data encryption

# Application URLs
NEXT_PUBLIC_APP_URL=https://your-domain.com # Your application domain
WEBHOOK_BASE_URL=https://your-domain.com # Base URL for webhooks

# Development Settings
NODE_ENV=development # development | production
LOG_LEVEL=info # debug | info | warn | error